# ============================================
# Copy this file to .env and customize values
# ============================================

# ===================
# CONTAINER REGISTRY
# ===================
REGISTRY=ghcr.io/doda2025-team14

# ===================
# IMAGES
# ===================
APP_IMAGE_REPO=${REGISTRY}/app
APP_IMAGE_TAG=stable

MODEL_SERVICE_IMAGE_REPO=${REGISTRY}/model-service
MODEL_SERVICE_IMAGE_TAG=stable

# ===================
# PORTS
# ===================
# Internal container ports
APP_PORT=8080
MODEL_SERVICE_PORT=8081

# Host port mapping (access app at localhost:HOST_PORT)
HOST_PORT=8080

# ===================
# SERVICE CONFIGURATION
# ===================
# Model service URL (used by app to connect to model-service)
MODEL_HOST=http://model-service:${MODEL_SERVICE_PORT}

# Toggles the caching feature of model-service
ENABLE_CACHE=false
# Model artifacts download URL
MODEL_URL=https://github.com/doda2025-team14/model-service/releases/latest/download/model-release.tar.gz
